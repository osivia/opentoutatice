<?xml version="1.0"?>
<component name="org.osivia.opentoutatice.webpage.ui.theme">

	<require>fr.toutatice.ecm.platform.web.theme</require>
	<require>fr.toutatice.ecm.platform.responsive.portalviews.theme</require>

	<extension target="org.nuxeo.theme.services.ThemeService"
		point="applications">

		<application root="${org.nuxeo.ecm.contextPath}"
			template-engine="jsf-facelets">

			<view id="/osivia_create_document.xhtml">
				<theme>toutatice/popup</theme>
			</view>
			<view id="/osivia_edit_document.xhtml">
				<theme>toutatice/popup</theme>
			</view>

		</application>
		
	</extension>

</component>