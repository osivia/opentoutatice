<?xml version="1.0"?>

<component name="fr.toutatice.ecm.platform.web.ui.types">

    <require>org.nuxeo.ecm.platform.types.TypeService</require>

    <extension target="org.nuxeo.ecm.platform.types.TypeService"
        point="types">
        
        <type id="PortalSite">
            <label>PortalSite</label>
            <category>Collaborative</category>
            <icon>/icons/portalsite.png</icon>
            <bigIcon>/icons/portalsite_100.png</bigIcon>
            <description>Espace de publication</description>
            <default-view>view_documents</default-view>
            <layouts mode="create">
                <layout>layout@PortalSite-create</layout>
            </layouts>
            <layouts mode="edit">
                <layout>layout@PortalSite-edit</layout>
            </layouts>
            <layouts mode="view" />
            <contentViews category="content">
                <contentView showInExportView="false">cv_ContentOrderedReadNWrite
                </contentView>
            </contentViews>
            <contentViews category="trash_content">
                <contentView showInExportView="false">document_trash_content
                </contentView>
            </contentViews>
        </type>

        <type id="PortalPage">
            <label>PortalPage</label>
            <category>SimpleDocument</category>
            <icon>/icons/PortalPage.png</icon>
            <bigIcon>/icons/PortalPage_100.png</bigIcon>
            <description>Rubrique de l'espace de publication Toutatice
            </description>
            <default-view>view_documents</default-view>
            <layouts mode="create">
                <layout>layout@PortalPage-create</layout>
            </layouts>
            <layouts mode="edit">
                <layout>layout@PortalPage-edit</layout>
            </layouts>
            <layouts mode="view" />
            <contentViews category="content">
                <contentView showInExportView="false">cv_ContentOrderedReadNWrite
                </contentView>
            </contentViews>
            <contentViews category="trash_content">
                <contentView showInExportView="false">document_trash_content
                </contentView>
            </contentViews>
        </type>

        <type id="Workspace">
            <layouts mode="any">
                <layout>heading</layout>
                <layout>layout@picture</layout>
            </layouts>
            <layouts mode="edit">
                <layout>heading</layout>
                <layout>layout@picture</layout>
            </layouts>
            <contentViews category="content">
                <contentView showInExportView="false">cv_ContentOrderedReadNWrite
                </contentView>
            </contentViews>
		</type>
		
		<!-- Surcharge du type pour intÃ©grer les fichiers joints -->
		<type id="Note">
			<label>Note</label>
			<icon>/icons/note.gif</icon>
			<bigIcon>/icons/note_100.png</bigIcon>
			<category>SimpleDocument</category>
			<description>Note.description</description>
			<default-view>view_documents</default-view>
			<layouts mode="any">
				<layout>heading</layout>
				<layout>note</layout>
				<layout>files</layout>
			</layouts>
			<layouts mode="edit">
				<layout>heading</layout>
				<layout>note</layout>
				<layout>files</layout>
				<layout>dublincore</layout>
			</layouts>
		</type>  
		
		<type id="Archive" coretype="Archive">
			<label>Archives de l'espace collaboratif</label>
			<category>Collaborative</category>
			<icon>/icons/workspace_100.png</icon>
			<bigIcon>/icons/workspace_100.png</bigIcon>
			<description>Archives</description>
			<default-view>view_documents</default-view>
			<layouts mode="any">
				<layout>heading</layout>
			</layouts>
			<layouts mode="create">
				<layout>layout@Folder-create</layout>
			</layouts>
			<layouts mode="edit">
				<layout>layout@Folder-edit</layout>
				<layout>contextualizeInternalContents</layout>
			</layouts>

		</type>		
		
    </extension>


</component>